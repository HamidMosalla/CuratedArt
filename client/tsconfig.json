{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "strict": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "lib": ["es2020", "dom"],
      "resolveJsonModule": true,
      "declaration": true,
      "importHelpers": true,
      "noImplicitThis": false,
      "useDefineForClassFields": true,
      "downlevelIteration": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": ["node_modules"]
}