{
  "compilerOptions": {
      "module": "esnext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "jsx": "react",
      "strict": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "lib": ["es2019", "dom"],
      "declaration": true,
      "importHelpers": true,
      "noImplicitThis": false,
      "useDefineForClassFields": true,
      "downlevelIteration": true,
      "target": "es5",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}